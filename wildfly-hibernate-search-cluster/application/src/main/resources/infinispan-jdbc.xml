<?xml version="1.0" encoding="UTF-8"?>
<infinispan
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:infinispan:config:7.2 http://www.infinispan.org/schemas/infinispan-config-7.2.xsd"
	xmlns="urn:infinispan:config:7.2">

	<jgroups>
		<stack-file name="infinispan-jdbc" path="infinispan-jgroups-jdbc.xml"/>
	</jgroups>

	<cache-container name="HibernateSearch"
					 default-cache="LuceneIndexesData" statistics="false" shutdown-hook="DONT_REGISTER">

		<transport stack="infinispan-jdbc"/>

		<jmx domain="app.infinispan" duplicate-domains="true"/>

		<replicated-cache name="LuceneIndexesMetadata" mode="SYNC" remote-timeout="25000">
			<transaction mode="NONE"/>
			<state-transfer enabled="true" timeout="480000" await-initial-transfer="true"/>
			<indexing index="NONE"/>
			<locking striping="false" acquire-timeout="10000" concurrency-level="500" write-skew="false"/>
			<eviction max-entries="-1" strategy="NONE"/>
			<expiration max-idle="-1"/>

			<persistence passivation="false">
				<file-store preload="true"
							purge="false"
							path="../standalone/data/hibernatesearch-file-store"
							shared="true">
					<write-behind/>
				</file-store>
			</persistence>
		</replicated-cache>

		<distributed-cache name="LuceneIndexesData" mode="SYNC" remote-timeout="25000">
			<transaction mode="NONE"/>
			<state-transfer enabled="true" timeout="480000" await-initial-transfer="true"/>
			<indexing index="NONE"/>
			<locking striping="false" acquire-timeout="10000" concurrency-level="500" write-skew="false"/>
			<eviction max-entries="-1" strategy="NONE"/>
			<expiration max-idle="-1"/>

			<persistence passivation="false">
				<file-store preload="true"
							purge="false"
							path="../standalone/data/hibernatesearch-file-store"
							shared="true">
					<write-behind/>
				</file-store>
			</persistence>
		</distributed-cache>

		<replicated-cache name="LuceneIndexesLocking" mode="SYNC" remote-timeout="25000">
			<transaction mode="NONE"/>
			<state-transfer enabled="true" timeout="480000" await-initial-transfer="true"/>
			<indexing index="NONE"/>
			<locking striping="false" acquire-timeout="10000" concurrency-level="500" write-skew="false"/>
			<eviction max-entries="-1" strategy="NONE"/>
			<expiration max-idle="-1"/>
		</replicated-cache>
	</cache-container>

</infinispan>
